{% extends 'base.html.twig' %}
{% block body %}
{% for message in app.flashes('Succès') %}
<div class="alert alert-success">
<h4>{{message}}</h4>
</div>
{% endfor %}

<br>
<div class="container">
<h2>Plat à editer</h2>
<br>
<table class="table table-striped">
<thead>
 <tr>
  <td>Numéro</td>
  <td>Nom du plat</td>
  <td>Description du plat</td>
  <td>Catégorie</td>
  <td>Prix</td>
  <td>Supprimer</td>
  <td><a href="{{ path('dishes.create')}}">Créer</a></td>
 </tr> 
</thead>
<tbody>
{% for dish in dishe %}
 <tr>
  <td>{{dish.id}}</td>
  <td><a href="{{ path('dishes.show', {id: dish.id})}}">{{dish.name}}</a></td>
  <td>{{dish.description}}</td>
  <td>{{dish.category}}</td>
  <td>{{dish.price}}</td>
  <td><a href="{{ path('dishes.remove', {id: dish.id})}}">X</a></td>
  <td></td>
 </tr>
 {% endfor %}
</tbody>
</table>
</div>
{% endblock %}
